<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1_group_member"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:background="@color/top_bar_normal_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back_group_member"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/create_group_back_arrow_left_32dp"/>

        <TextView
            android:id="@+id/tv_group_name_group_member"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="群昵称"
            android:textSize="25dp"
            android:textColor="@color/White"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear2_group_member"
        android:layout_below="@+id/linear1_group_member"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="群成员："
            android:textSize="25dp"/>


        <TextView
            android:id="@+id/tv_add_group_member"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/group_create_group_24dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:textSize="20dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/linear2_group_member"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="70%"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview_group_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location_group_member"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@color/Blue"
            android:text="群员定位"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/tv_group_describle_group_member"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/Blue"
            android:gravity="center"
            android:text="群简介"
            android:textSize="20dp" />


    </LinearLayout>


</android.support.percent.PercentRelativeLayout>